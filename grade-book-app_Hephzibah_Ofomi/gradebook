class GradeBook:
    def __init__(self):
        self.student_list = []
        self.course_list = []

    def add_student(self, email, names):
        new_student = Student(email, names)
        self.student_list.append(new_student)
        self.notify("New Student Added", f"Student {names} with email {email} added successfully.")

    def add_course(self, name, trimester, credits):
        new_course = Course(name, trimester, credits)
        self.course_list.append(new_course)
        self.notify("New Course Added", f"Course {name} added successfully.")

    def register_student_for_course(self, student_email, course_name, grade):
        student = next((s for s in self.student_list if s.email == student_email), None)
        course = next((c for c in self.course_list if c.name == course_name), None)
        if student and course:
            registered_course = Course(course.name, course.trimester, course.credits, grade)
            student.courses_registered.append(registered_course)
            student.calculate_GPA()
            self.notify("Course Registered", f"Student {student.names} registered for {course_name} with grade {grade}.")
        else:
            self.notify("Error", "Student or Course not found.")

